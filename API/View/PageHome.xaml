<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="API.View.PageHome"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Button
                Margin="20,0,20,0"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoJPHCommand}"
                CornerRadius="20"
                Text="JPH"
                TextColor="White" />
            <Button
                Margin="20,0,20,0"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoReqresCommand}"
                CornerRadius="20"
                Text="REQRES"
                TextColor="White" />
            <Button
                Margin="20,0,20,0"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoMyAPICommand}"
                CornerRadius="20"
                Text="MY API"
                TextColor="White" />

            <Button
                Margin="20,0,20,0"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoSupabaseCommand}"
                CornerRadius="20"
                Text="Supabase"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>