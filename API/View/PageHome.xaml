<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="API.View.PageHome">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center">
            <Button
                Text="JPH"
                Margin="20,0,20,0"
                CornerRadius="20"
                TextColor="White"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoJPHCommand}"
                />
            <Button
                Text="REQRES"
                Margin="20,0,20,0"
                CornerRadius="20"
                TextColor="White"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoReqresCommand}"
                />
            <Button
                Text="MY API"
                Margin="20,0,20,0"
                CornerRadius="20"
                TextColor="White"
                BackgroundColor="#0099ff"
                Command="{Binding btnGoMyAPICommand}"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>